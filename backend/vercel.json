{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/cron/recurring-invoices", "destination": "/api/cron/recurring-invoices" },
    { "source": "/(.*)", "destination": "/api" }
  ],
  "crons": [
    {
      "path": "/api/cron/recurring-invoices",
      "schedule": "0 8 * * *"
    }
  ]
}
